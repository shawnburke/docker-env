    "version": "0.2.0",
    "configurations": [
        {
            "name": "Client",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/client/main.py",
            "args": ["kraken-dev-941"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Launch Backend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/backend",
            "env": {
                "DIR": "${workspaceFolder}/.cache",
                "PORT": "3001",
                "DNS_NAMESERVERS": "1.1.1.1,8.8.8.8",
                "DEFAULT_IMAGE": "docker-env-base:local"
            }
        }
    ]
}