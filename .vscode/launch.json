    "version": "0.2.0",
    "configurations": [
        {
            "name": "Client",
            "type": "python",
            "request": "launch",
            "module": "docker_env_client",
            "cwd": "${workspaceFolder}/client",
            "args": [
                "localhost"
            ],
            "justMyCode": true
        },
        {
            "name": "Test File",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/client/venv/bin/python3",
            "args": [
                "-m",
                "unittest",
                "${file}"
            ],
            "cwd": "${workspaceFolder}/client",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Launch Backend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/backend",
            "env": {
                "DIR": "${workspaceFolder}/.cache",
                "PORT": "3001",
                "DNS_NAMESERVERS": "1.1.1.1,8.8.8.8",
                "DEFAULT_IMAGE": "docker-env-base:local"
            }
        }
    ]
}