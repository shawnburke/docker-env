    "version": "0.2.0",
    "configurations": [
        {
            "name": "Client",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/client/main.py",
            "args": ["create", "test-space"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Launch Backend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/backend",
            "env": {
                "DIR": "${workspaceFolder}/.cache",
                "PORT": "3001"
            }
        }
    ]
}